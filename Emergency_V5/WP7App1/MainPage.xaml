                    <StackPanel Width="400"
                                Margin="0, 0, 0, 10"
                                Orientation="Vertical">
                        <TextBlock Margin="10, 0, 0, -10" Text="First name:" />
                        <TextBlock x:Name="fr_FirstName"
                                   Width="400"
                                   Margin="10, 10, 0, 0"
                                   FontSize="30"
                                   FontWeight="Bold"
                                   Foreground="Red" />
                    </StackPanel>

                    <StackPanel Width="400"
                                Margin="0, 0, 0, 10"
                                Orientation="Vertical">
                        <TextBlock Margin="10, 0, 0, -10" Text="Last name:" />
